{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": "./src",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", ".storybook", "barrel.ts"]
}
